<div class="container mt-5">
  <div class="row">
    <div class="col-10 offset-1">
      <h1>Our books</h1>
      <table class="table table-hover">
        <thead>
        <tr>
          <th scope="col">ID</th>
          <th scope="col">Title</th>
          <th scope="col">Author</th>
          <th scope="col">Available</th>
          <th></th>
          <th></th>
        </tr>
        </thead>
        <tbody>
        <% @books.each do |book| %>
        <tr>
          <th scope="row"><%= book.id %></th>
          <td><%= book.title %></td>
          <td><%= book.author %></td>
          <td><%= book.user_id.nil? %></td>
          <td>
            <% if !book.user_id %>
              <a class="btn btn-success" href="<%= user_borrow_book_path(book) %>" role="button">Borrow</a>
            <% end %>
          </td>
          <td><a class="btn btn-primary" href="<%= book_path(book) %>" role="button">Details</a></td>
        </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
